{
    "require": {
        "php": ">=5.3.0",
        "silex/silex": "~1.0@dev",
        "filp/whoops": "~1.0",
        "chh/cache-service-provider": "~1.0"
    },
    "extra": {
        "heroku": {
            "document-root": "web",
            "index-document": "index.php",
            "php-config": [
                "short_open_tag=on",
                "date.timezone=Europe/Vienna"
            ],
            "engines": {
                "php": "5.5.0",
                "nginx": "1.5.2"
            },
            "nginx-includes": [
                "conf/nginx.conf"
            ]
        }
    }
}
